 <div class="col-md-4">

                <div class="card-body">
                	
                  <%= image_tag portfolio_item.thumb_image if !portfolio_item.thumb_image.nil? %>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                   <h6 class="text-muted"><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item.id) %> / 
                   <%= portfolio_item.subtitle %></h6>
                  
                </div>
  

               <% if logged_in?(:site_admin) %>
               <p><%= link_to "Edit", edit_portfolio_path(portfolio_item.id) if logged_in?(:site_admin) %> / 
               <%= link_to "Delete Portfolio Item", portfolio_path(portfolio_item), class:"text-danger", method: :delete, data: {confirm: "Are you sure"} if logged_in?(:site_admin)%></p>
               <% end %>

</div>