

<h1>Portfolios Show</h1>

<%= image_tag @portfolio_item.main_image if !@portfolio_item.main_image.nil? %>

<h2>Number of post: <%= @portfolio_item.id %></h2>
<h2>Title of post: <%= @portfolio_item.title %></h2>
<h3><%= @portfolio_item.subtitle %></h3>
<p><%= @portfolio_item.body %></p>
<h3>Created at: <%= @portfolio_item.created_at %></h3>

<h3>Technologies Used:</h3>

<% @portfolio_item.technologies.each do |t| %>
<h5><%= t.name %></h5>
<% end %>

<%= link_to 'Edit', edit_portfolio_path(@portfolio_item) if logged_in?(:site_admin) %>

<%= link_to 'Delete', portfolio_path(@portfolio_item), method: :delete, data: {confirm: "Are you sure"} if logged_in?(:site_admin)%>

<%= link_to 'Back', portfolios_path %>

