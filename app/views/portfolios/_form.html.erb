
<%= form_for(@portfolio_item) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :subtitle %>
    <%= f.text_area :subtitle %>
  </div>

   <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
   </div>

   <div class="field">
    <p>Link for image</p>
    <%= f.text_area :thumb_image %>
   </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
