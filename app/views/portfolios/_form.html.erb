
<%= form_for(@portfolio_item) do |f| %>
<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class:"form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :subtitle %>
      <%= f.text_area :subtitle, class:"form-control" %>
    </div>

      <div class="form-group">
      <p>Link for image</p>
      <%= f.text_area :thumb_image, class:"form-control" %>
     </div>

      <div class="form-group">
      <p>Link for image</p>
      <%= f.text_area :main_image, class:"form-control" %>
     </div>
     
  </div>
  <div class="col-md-6">
     <div>
       <%= f.fields_for :technologies do |technologies_form| %>
         <div class="form-group">
          <%= technologies_form.label :name %>
          <%= technologies_form.text_field :name, class:"form-control" %>
         </div>
       <% end %>
    </div>

  </div>
  <div class="col-md-12">

     <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, class:"form-control", rows: 13 %>
     </div>

   </div>  
</div>
    <div class="form-group">
      <%= f.submit 'Save Portfolio Item', class: 'btn btn-primary btn-block' %>
    </div>
<% end %>
