<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title: "Adam's site", sticky: false, time: 5000) %>
    <% end %>

  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>


  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: 'form-control', rows: 15 %>
  </div>

  <div class="form-group row">
    <%= form.submit "Submit", class:"btn btn-primary btn-block ml-3 mr-3" %>

    
  </div>
<% end %>


