<div class="container mt-5 text-muted">
	<h1 class="mt-5 mb-5 text-center">Portfolios Show</h1>
	<div class="row">
		<div class="col-md-7" style="max-width:50%; max-height: 50%; overflow: hidden; background-position: center;">
			<%= image_tag @portfolio_item.main_image if !@portfolio_item.main_image.nil? %>
		</div>
		<div class="col-md-5">
            <h4>Title of post: <%= @portfolio_item.title %></h4>
            <hr>
            <h6><%= @portfolio_item.subtitle %></h6>
            <p><%= @portfolio_item.body %></p>
            <h6>Created at: <%= @portfolio_item.created_at %></h6>
            <hr>
            <h5>Technologies Used:</h5>
            <% @portfolio_item.technologies.each do |t| %>
            <h6><%= t.name %></h6>
            <% end %>
            <hr>
            <div>
            <hr>
            <h5 class>Manage your post:</h5>
            <%= link_to 'Edit', edit_portfolio_path(@portfolio_item),class:"btn btn-primary" if logged_in?(:site_admin) %>

            <%= link_to 'Delete', portfolio_path(@portfolio_item),class:"btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure"} if logged_in?(:site_admin)%> 
            </div>
            <hr>
            </br>
            <h5><%= link_to 'Back', portfolios_path %></h5>
		</div>
		


	</div>
</div>



