<div class="col-md-8 blog-main">


  <h2><%= @blog.title %></h2>

  <p><%= link_to 'Edit', edit_blog_path(@blog) if logged_in?(:site_admin) %> / <%= link_to 'Destroy', @blog,class:"text-danger", method: :delete, data: {confirm: "Are you sure"} if logged_in?(:site_admin)%>  / 
  <%= link_to 'Back', blogs_path %></p>



  <p>
      <%= @blog.body %>
  </p>


  <p>
    <strong>Created at::</strong>
    <%= @blog.created_at%>
  </p>

  <!-- Start of the comment form -->
  <%= render 'comments/comment_form' %>
  <!-- End of the comment form -->

  <!-- Start of the comments -->
  <%= render @blog.comments %>
  <!-- End of the comments -->

 </div>

